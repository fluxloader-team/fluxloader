{
	"name": "sandustry-fluxloader",
	"author": "Fluxloader Team",
	"email": "thomas.burniston@gmail.com",
	"description": "A cross-platform modloader for Sandustry",
	"version": "2.0.0",
	"main": "src/electron.js",
	"type": "module",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder --win portable --x64"
	},
	"dependencies": {
		"acorn": "^8.14.0",
		"adm-zip": "^0.5.16",
		"asar": "^3.2.0",
		"marked": "^15.0.11",
		"semver": "^7.7.2"
	},
	"devDependencies": {
		"electron": "^35.0.2",
		"electron-builder": "^26.0.12"
	},
	"build": {
		"appId": "app.fluxloader.Fluxloader",
		"productName": "Fluxloader",
		"asar": true,
		"publish": null,
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"mac": {
			"icon": "build/icons/256x256.icns",
			"identity": null,
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"win": {
			"icon": "build/icons/256x256.ico",
			"target": [
				{
					"target": "portable",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			]
		},
		"linux": {
			"icon": "build/icons/256x256.png",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "deb",
					"arch": [
						"x64",
						"arm64"
					]
				}
			]
		},
		"extraMetadata": {
			"buildResources": "build"
		}
	}
}
