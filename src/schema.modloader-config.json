{
	"gamePath": {
		"type": "string",
		"default": "."
	},
	"modsPath": {
		"type": "string",
		"default": "./mods"
	},

	"modsEnabled": {
		"type": "object",
		"default": {}
	},
	"loadOrder": {
		"type": "object",
		"default": []
	},
	"loadIntoModloader": {
		"type": "boolean",
		"default": true
	},
	"logging": {
		"logToFile": {
			"type": "boolean",
			"default": true
		},
		"logToConsole": {
			"type": "boolean",
			"default": true
		},
		"consoleLogLevel": {
			"type": "dropdown",
			"default": "info",
			"options": ["debug", "info", "warn", "error"]
		},
		"fileLogLevel": {
			"type": "dropdown",
			"default": "debug",
			"options": ["debug", "info", "warn", "error"]
		},
		"logFilePath": {
			"type": "string",
			"default": "modloader.log"
		}
	},
	"game": {
		"enableDebugMenu": {
			"type": "boolean",
			"default": false
		},
		"debugMenuZoom": {
			"type": "number",
			"default": 0.8,
			"min": 0.1,
			"max": 2.0,
			"step": 0.1
		},
		"openDevTools": {
			"type": "boolean",
			"default": false
		},
		"disableMenuSubtitle": {
			"type": "boolean",
			"default": false
		}
	},
	"gui": {
		"openDevTools": {
			"type": "boolean",
			"default": false
		}
	}
}
